{
  "name": "Kubernetes Security Training Labs",
  "image": "quay.io/kubermatic-labs/training-ghcs-kubernetes-security-trainee-environment:1.0.2",
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
        "terminal.integrated.shell.linux": "/bin/bash",
        "files.exclude": {
          ".git/": true,
          ".gitignore": true,
          ".devcontainer/": true,
          ".99_todos/": true,
          ".00_init/": true,
          "makefile": true
        }
      }
    }
  },
  "remoteUser": "root"
}